<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context="com.adev.swiftcontributor.activity.DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_img_thumbnail"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:src="@drawable/ic_person_black_48dp" />

        <TextView
            android:id="@+id/user_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="10dp"
            android:text="User"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/user_txt_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:drawableStart="@drawable/ic_group_black_48dp"
            android:padding="10dp"
            android:text="followers"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/user_txt_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_link_black_48dp"
            android:text="Voir sur navigateur"
            android:textSize="18sp" />


    </LinearLayout>

</ScrollView>
